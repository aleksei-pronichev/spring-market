<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_users_roles" author="aleksei pronichev">
        <createTable tableName="USERS_ROLES">
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_users_roles_user_id" references="USERS(USER_ID)"/>
            </column>
            <column name="ROLE_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_users_roles_role_id" references="ROLES(ROLE_ID)"/>
            </column>
        </createTable>
        <addPrimaryKey constraintName="pk_user_roles" tableName="USERS_ROLES" columnNames="USER_ID, ROLE_ID"/>
    </changeSet>

</databaseChangeLog>