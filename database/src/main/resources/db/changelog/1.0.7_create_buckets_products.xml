<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_orders_bucket_products" author="aleksei pronichev">
        <createTable tableName="BUCKETS_PRODUCTS">
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_bucket_products_user_id" references="USERS(USER_ID)"/>
            </column>
            <column name="PRODUCT_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_bucket_products_product_id"
                             references="PRODUCTS(PRODUCT_ID)"/>
            </column>
            <column name="COUNT" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey constraintName="pk_bucket_products" tableName="BUCKETS_PRODUCTS"
                       columnNames="USER_ID, PRODUCT_ID"/>
    </changeSet>
</databaseChangeLog>